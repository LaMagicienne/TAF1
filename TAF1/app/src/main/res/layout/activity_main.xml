<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondecran"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ligne1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="7dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/facebook" />

        <ImageView
            android:id="@+id/ebay"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ebay" />

        <ImageView
            android:id="@+id/chrome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/chrome" />

        <ImageView
            android:id="@+id/Apps"
            android:layout_width="93dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/apps" />

        <ImageView
            android:id="@+id/amazone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/amazone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ligne2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ligne1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/instagram"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/insta" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instagram"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

        <ImageView
            android:id="@+id/ikea"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ikea" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ikea"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/playstore"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/googleplay" />

        <ImageView
            android:id="@+id/gmail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/gmail" />

        <ImageView
            android:id="@+id/fleur"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/fleur" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ligne3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ligne2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ocean"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ocean" />

        <ImageView
            android:id="@+id/netflix"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/netflix" />

        <ImageView
            android:id="@+id/messenger"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/messenger" />

        <ImageView
            android:id="@+id/map"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/map" />

        <ImageView
            android:id="@+id/lune"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/lune" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ligne4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ligne3"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/playtore"
            android:layout_width="49dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/playstore" />

        <ImageView
            android:id="@+id/pinterest"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/pinterest" />

        <ImageView
            android:id="@+id/pierres"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/pierres" />

        <ImageView
            android:id="@+id/ouigo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ouigo" />

        <ImageView
            android:id="@+id/oiseau"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/oiseau" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ligne5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ligne4"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/whatsapp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/whatsapp" />

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/twiter" />

        <ImageView
            android:id="@+id/tiktok"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/tiktok" />

        <ImageView
            android:id="@+id/telegram"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/telegram" />

        <ImageView
            android:id="@+id/snap"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/snap" />

        <ImageView
            android:id="@+id/skype"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/skype" />
    </LinearLayout>
</RelativeLayout>